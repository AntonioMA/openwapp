      <h1>{{translate 'retrievingLocation'}}</h1>
      <p class="center">
        <progress></progress>     
      </p>
      <p class="hide">{{translate 'loadLocationError'}}</p>
    </section>
    <menu>
      <button>{{translate 'cancelButton'}}</button>
    </menu>
</form>
