    <a href="#conversation/{{conversationId}}"><span class="icon icon-back">Back</span></a>
    <menu type="toolbar"><button>{{translate 'sendButton'}}</button></menu>
    <h1>{{translate 'sendLocation'}}</h1>
  </header>

  <div class="page-wrapper">
    <div class="viewer">
      <img src=""></img>
    </div>
  </div><!-- page wrapper -->
