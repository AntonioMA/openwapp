  <header>
    <button class="btn-back">
      <span class="icon icon-back"></span>
    </button>
    <h1>{{translate 'terms'}}</h1>
  </header>
  <div class="page-wrapper">
    <section class="main" id="tos-body"></section>
  </div>
</section>


<section role="region" id="privacy-page"
 class="privacy-page">
  <header>
